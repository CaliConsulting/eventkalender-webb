<arquillian xmlns="http://jboss.org/schema/arquillian"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <container qualifier="wildfly-remote">
    <protocol type="Servlet 3.0">
      <property name="host">localhost</property>
      <property name="port">8080</property>
    </protocol>
  </container>

  <container qualifier="wildfly-managed" default="true">
    <configuration>
      <property name="jbossHome">${jboss.home}</property>
      <property name="modulePath">${jboss.module.path}</property>
      <property name="javaVmArguments">-Djboss.socket.binding.port-offset=10000 -Djboss.management.http.port=19990 -Xms512m -Xmx1024m -XX:MaxPermSize=512m</property>
      <property name="httpPort">18080</property>
      <property name="managementPort">19990</property>
    </configuration>
  </container>

</arquillian>